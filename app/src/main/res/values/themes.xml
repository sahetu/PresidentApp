<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PresidentApp" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/black1</item>
    </style>

    <style name="Theme.PresidentApp" parent="Base.Theme.PresidentApp" />

    <style name="edit_18" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/white1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="text_20" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white1</item>
        <item name="android:textSize">@dimen/_17sdp</item>
    </style>

    <style name="text_bold_30" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white1</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_18" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>